<Window x:Class="PrPract3._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrPract3._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="tablic" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding EMP.SURNAME}" Header="Фамилия"/>
                <DataGridTextColumn Binding="{Binding EMP.FIRST_NAME}" Header="Имя"/>
                <DataGridTextColumn Binding="{Binding EMP.MIDDLENAME}" Header="Отчество"/>
                <DataGridTextColumn Binding="{Binding Client.ClientName}" Header="Имя покупателя"/>
                <DataGridTextColumn Binding="{Binding Coffee.Coffee_Name}" Header="Название кофе"/>
                <DataGridTextColumn Binding="{Binding Coffee.Coffee_Price}" Header="Цена кофе"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
